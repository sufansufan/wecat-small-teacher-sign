.sign
  .sign-class
    width 100vw
    height 280px
    background #3ea1f5
    color #fff
    position relative
    .sign-times
      width 170px
      height 80px
      background #66b1f7
      position absolute
      top 10px
      right 0px
      border-top-left-radius 50px
      border-bottom-left-radius 50px
      padding 25px 0 25px 25px
      line-height 25px
      font-size 30px
      text-align center
    view
      width 100%
      background #3ea1f5
      .class-name
        width calc(100vw - 160px)
        height 100px
        padding 0px 30px
        font-weight bold
        color #fff
        font-size 40px
      .class-campus
        width calc(100% - 60px)
        height 90px
        border-bottom 1px  solid #56adf6
        display flex
        align-items center
        margin 0 auto
        image
          width 36px
          height 36px
          margin-right 40px
        text
          font-size 30px
          line-height 90px
      .class-last
        border none
  .sign-map
    text-align center
    map
      width 100% !important
      height 75vh
