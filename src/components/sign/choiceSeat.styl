.choice-seat
  .sign-class
    width 100vw
    height 200px
    background #3ea1f5
    color #fff
    position relative
    z-index 1002
    view
      width 100%
      background #3ea1f5
      .class-campus
        width calc(100% - 60px)
        height 90px
        border-bottom 1px  solid #56adf6
        display flex
        margin 0 auto
        image
          width 36px
          height 36px
          margin-right 40px
          margin-top 25px
        text
          font-size 30px
          line-height 90px
      .class-last
        border none
  .pattern
    width 100vw
    height 100px
    display flex
    align-items center
    justify-content space-between
    padding 15px 30px
    background #fff
    position relative
    z-index 1002
    .pattern-sign
      font-size 36px
      font-weight bold
    .pattern-putong
      width 150px
      height 60px
      line-height 60px
      color #fff
      background #3ea1f5
      border-radius 60px
      font-size 25px
      text-align center
  .seat
    width 100vw
    height calc(100vh - 300px)
    overflow hidden
    background #f3f3f3
    .move-item
      width 110px
      height 110px
      border 1px solid #4da7f7
      border-radius 50%
      box-shadow 0 0 20px 0 #4da7f7
      left 38px
      top calc(100% - 195px)
      z-index 1004
      image
        width 100%
        height 100%
        border-radius 50%
    .seat-box
      width calc(120px * 8)
      height calc(100vh - 450px)
      display flex
      justify-content space-around
      flex-wrap wrap
      padding 30px
      position relative
      &::after
        content ""
        position absolute
        left 50%
        top 0
        border-left 1px dotted #d5d5d5
        width: 0
        height calc(117px * 8)
      .seat-list
        width 110px
        height 120px
        .seat-img
          width 86px
          height 72px
          background url("../../asset/images/desk.png") center top no-repeat
          background-size cover
          margin 0 auto
          image
            margin 12px 12px 0
            width 62px
            height 60px
            border-radius 10px
        &.actived .seat-img
          background url("../../asset/images/desk_actived.png") center top no-repeat
          background-size cover
        .seat-name
          text-align center
          font-size 22px
  .platform
      position fixed
      left 0
      bottom 160px
      z-index 999
      width 100%
      height 50px
      transition all .3s
      .platform-content
        position absolute
        left 50%
        bottom 0
        transform translateX(-25%)
        font-size 22px
        width 50%
        height 15px
        background #dcdcdc
        border-radius 10px
        &::after
          content "讲台"
          position absolute
          left 50%
          bottom 20px
          color #ccc
          transform translateX(-50%)
  scroll-view
    position relative
    width 100%
  .ruler
    position absolute
    z-index 1001
    right 10px
    top 30px
    width 20px
    background #dcdcdc
    border-radius 10px
    display flex
    flex-direction column
    transition all .3s
    text
      height 120px
      line-height 80px
      text-align center
      &:last-child{
        height 72px
      }
  .footer
    width 100vw
    height 150px
    background #ffffff
    padding-left 30px
    display flex
    bottom 0
    left 0
    position relative
    z-index 1002
    .no-txt
      color #ccc
      width 100%
      line-height 150px
      font-size 16Px
    .select-student
      width 130px
      height 100%
      text-align center
      position absolute
      z-index 1000
      background #fff
      .student-box
        width 130px
        height 130px
        border-radius 50%
        background #fff
        margin-top -50px
        position relative
        z-index 1003
        .student-name-box
          text
            display block
          .student-name
            padding-top 125px
            font-weight 600
            font-size 30px
          .student-pinyin
            color #71807d
            font-size 22px
    .list
      width 100%
      height 150px
      display flex
      padding 0 40px 0 170px
      align-items center
      background #fff
      .student-list
        width 130px
        height 130px
        padding 5px 0px
        text-align center
        padding-right 40px
        .list-img
          width 90px
          height 90px
          border-radius 50%
          border 1px solid #eee
          image
            width 100%
            height 100%
            border-radius 50%
        .list-name
          font-size 22px
