.entry
  width 100vw
  height 100vh
  background #fff
  .logo
    width 100vw
    height 300px
    display flex
    justify-content center
    align-items center
    image
      width 400px
      height 130px
  .form
    padding 20px 60px
    .yan-zheng-ma
      text
        color #3ea1f5
      .text-disabled
        color #ccc
    .form-button
      button
        border-radius 50px
        background #3ea1f5
        color #fff
        border: none
    .radio
      display flex
      justify-content space-around
      margin 50px
      view
        display flex
        align-items center
        justify-content center
        font-size 30px
        color #c8c8c8
        .radio-default
          width 34px
          height 34px
          border 1px solid #c8c8c8
          box-sizing border-box
          border-radius 50%
          margin-right 20px
          .actived
            width 22px
            height 22px
            background #3ea1f5
            border-radius 50%
        .teacher-actived
          color #1b1b1b
